<Window x:Class="App1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App1"
        mc:Ignorable="d"
        Title="Первое приложение" Height="450" Width="800">

    <Grid x:Name="MainGrid">
    
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Поиск изображения">
                <MenuItem Header="Оригинальное фото" ></MenuItem>
                <MenuItem Header="Размеченное фото" >
                    <MenuItem Header="WinForms"></MenuItem>
                    <MenuItem Header="WPF" ></MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Добавить">
                <MenuItem Header="Оригинальное фото" ></MenuItem>
                <MenuItem Header="Размеченное фото" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Изменить информацию">
                <MenuItem Header="Об оригинальнорм фото" ></MenuItem>
                <MenuItem Header="О размеченном фото" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Удалить">
                <MenuItem Header="Оригинальное фото"></MenuItem>
                <MenuItem Header="Размеченное фото"></MenuItem>
            </MenuItem>
        </Menu>

        <Grid x:Name="InfoGrid" Margin="5,25,5,5" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Grid x:Name="SubGridWithButtons" Grid.Column="1" Margin="5" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
            
                <Button x:Name="ButtonShow" Grid.Row="0" Content="Показать" Margin="5" Foreground="#FF660909" BorderBrush="Black" Background="#FFFDBBBB" FontWeight="Bold" FontStyle="Italic" FontFamily="Segoe Script" FontSize="20" Click="ClickMeBtn_Click" />
                <Button x:Name="ButtonAdd" Grid.Row="1" Content="Добавить" Margin="5" Foreground="#FF660909" BorderBrush="Black" Background="#FFFDBBBB" FontWeight="Bold" FontStyle="Italic" FontFamily="Segoe Script" FontSize="20" Click="ClickMeBtn_Click" />
                <Button x:Name="ButtonChange" Grid.Row="2" Content="Изменить" Margin="5" Foreground="#FF660909" BorderBrush="Black" Background="#FFFDBBBB" FontWeight="Bold" FontStyle="Italic" FontFamily="Segoe Script" FontSize="20" Click="ClickMeBtn_Click" />
                <Button x:Name="ButtonDelete" Grid.Row="3" Content="Удалить" Margin="5" Foreground="#FF660909" BorderBrush="Black" Background="#FFFDBBBB" FontWeight="Bold" FontStyle="Italic" FontFamily="Segoe Script" FontSize="20" Click="ClickMeBtn_Click" />
            </Grid>

            <Image Source="C:\Users\user\source\repos\WPF\App1\App1\Properties\Images\Picture.bmp" Stretch="Fill" Grid.Row="0" Margin="10,10,0,10"/>
            <Label x:Name="DateOfPhoto" Grid.Row="1" Content="ДатаФото" FontSize="20"  HorizontalAlignment="Left"/>
            <Label x:Name="Region" Grid.Row="1" Content="Регион" FontSize="20" HorizontalAlignment="Center"/>
            <Label x:Name="DateOfMarkup" Grid.Row="1" Content="ДатаРазметки" FontSize="20" HorizontalAlignment="Right"/>
            <Button Name="ButtonMoreInfo" Content="Подробнее" Grid.Row="1" Grid.Column="1" Margin="10,0,10,10" BorderBrush="Black"  FontSize="20" Click="ClickMeBtn_Click"/>




            <!--<Canvas HorizontalAlignment="Left" VerticalAlignment="Top" Height="100"  Width="100" Margin="350,175,0,0"/>-->
            <!--<Image  HorizontalAlignment="Left" VerticalAlignment="Top" Height="100"  Width="100" Margin="350,175,0,0"/>-->
        </Grid>
    </Grid>
</Window>
