<Window x:Class="PhotoViewerPRCVI.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoViewerPRCVI"
        mc:Ignorable="d"
        
        WindowStyle="ToolWindow"
        Loaded="AddWindowLoading"
        Title="Добавить снимок" 
        Height="260" Width="450"
        MinHeight="260" MinWidth="450"
        MaxHeight="260">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="AddFileName" Text="Путь к файлу"  Height="20" MinWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,-70,0" TextWrapping="NoWrap" IsReadOnly="True" TextChanged="CheckForAllInputsTB" AutomationProperties.HelpText="Путь к файлу изображения"/>
        <Button Grid.Column="1" Content="Найти изображение" Height="20" HorizontalAlignment="Right" Margin="10,5" VerticalAlignment="Top" Width="130" Click="FindAddImagePath"/>

        <Label Content="Тип снимка:" Grid.Row="1" Grid.Column="0" Height="25" HorizontalAlignment="Left" Margin="10,5" VerticalAlignment="Top"/>
        <ComboBox x:Name="SelectType" Grid.Row="1" Grid.Column="1" Margin="10, 5" Height="25" Width="130" VerticalAlignment="Top" HorizontalAlignment="Right" VerticalContentAlignment="Center" >
            <ComboBoxItem HorizontalAlignment="Right" Width="128" Content="Оригинальный" Selected="SelectedTypeOriginal"/>
            <ComboBoxItem HorizontalAlignment="Right" Width="128" Content="Размеченный" Selected="SelectedTypeMarkup"/>
        </ComboBox>


        <Label Content="Дата создания/разметки:" Grid.Row="2" Grid.Column="0" Height="25" HorizontalAlignment="Left" Margin="10,5" VerticalAlignment="Top"/>
        <Label Content="Дата" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,-2,0,0" FontSize="8" Width="100" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
        <Label Content="Время" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-2,10,0" FontSize="8" Width="89" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
        <DatePicker x:Name="DateSelector" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="10,15,0,5" VerticalAlignment="Top" Width="100" SelectedDateChanged="CheckForAllInputsSelector"/>
        <ComboBox x:Name="hoursBox" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="0,15,60,5"  VerticalAlignment="Top" Width="40" Height="25" Loaded="HoursBox_Loaded"/>
        <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="0,15,48,5" Content=":"/>
        <ComboBox x:Name="minutesBox" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="0,15,10,5"  VerticalAlignment="Top" Width="40" Height="25" Loaded="MinutesBox_Loaded"/>

        <Label x:Name="RegOrigLabel" Content="Регион:" Grid.Row="3" Grid.Column="0" Height="25" HorizontalAlignment="Left" Margin="10,5" VerticalAlignment="Top"/>
        <TextBox x:Name="Region" Grid.Row="3" Grid.Column="1" Height="20" Width="130" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,5" TextWrapping="NoWrap" TextChanged="CheckForAllInputsTB"/>
        <ComboBox x:Name="OrigName" Grid.Row="3" Grid.Column="1" Margin="10, 5" Height="25" Width="130" VerticalAlignment="Top" HorizontalAlignment="Right" VerticalContentAlignment="Center" Loaded="OrigName_Loaded" SelectionChanged="CheckForAllInputsSelector">
        </ComboBox>


        <Label x:Name="SputLabel" Content="Спутник:" Grid.Row="4" Grid.Column="0" Height="25" HorizontalAlignment="Left" Margin="10,5" VerticalAlignment="Top"/>
        <TextBox x:Name="Sputnik" Grid.Row="4" Grid.Column="1" Height="20" Width="130" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,5" TextWrapping="NoWrap" TextChanged="CheckForAllInputsTB"/>

        <Button Content="Отмена" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Bottom" Click="BackToMain"/>
        <Button x:Name="SaveBtn"  Content="Сохранить" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom" Click="SaveAndBackToMain" IsEnabled="False"/>


    </Grid>
</Window>
