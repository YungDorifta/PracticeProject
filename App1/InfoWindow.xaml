<Window x:Class="PhotoViewer.FullInfoWindow"
        Loaded="Window_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoViewer"
        mc:Ignorable="d"
        Title="Подробная информация" Height="450" Width="800">
    <Grid x:Name="FullInfoWindowMainGrid">
        <Grid x:Name="FullInfoSubGrid">
            <DataGrid  x:Name="FullInfoTable" Grid.Column="1" AutoGenerateColumns="False" Margin="10,10,10,60">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding OriginalID}" Header="ID оригинального фото" Width="120"/>
                    <DataGridTextColumn Binding="{Binding Date}" Header="Дата снимка" Width="125"/>
                    <DataGridTextColumn Binding="{Binding Picturepath}" Header="Путь к картинке" Width="300"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Button Width="100" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="BackToMain" FontSize="20">Назад</Button>
    </Grid>
</Window>
