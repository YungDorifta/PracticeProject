<Window x:Class="PhotoViewer.FullInfoWindow"
        Loaded="Window_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoViewer"
        mc:Ignorable="d"
        Title="Подробная информация" 
        Height="250" Width="800"
        MinHeight="250" MinWidth="400">
    <Grid x:Name="FullInfoWindowMainGrid">
        <Grid x:Name="FullInfoSubGrid">
            <DataGrid  x:Name="FullInfoTable" Grid.Column="1" AutoGenerateColumns="False" Margin="10,10,10,60" IsReadOnly="True" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Parameter}" Header="Параметр" Width="275"/>
                    <DataGridTextColumn Binding="{Binding Value}" Header="Значение" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Button Width="100" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="BackToMain" FontSize="20">Назад</Button>
    </Grid>
</Window>
